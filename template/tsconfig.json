{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "dom"
    ],
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
