{
  "name": "create-ts-lib",
  "version": "0.0.1",
  "description": "create typescript library cli",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "README.md"
  ],
  "type": "module",
  "scripts": {
    "clean": "rimraf lib",
    "build": "pnpm run clean && pnpm run compile && pnpm run cp",
    "compile": "tsc -p tsconfig.json",
    "start": "node --experimental-specifier-resolution=node --loader ts-node/esm src/index.ts",
    "dev": "nodemon --watch src/** --ext ts,json --exec pnpm run start",
    "watch": "tsc -w -p tsconfig.json",
    "cp": "copyfiles -a ./template/**/* lib/",
    "prettier:check": "yarn prettier --check 'src/**/*.ts'",
    "prettier:fix": "yarn prettier --write 'src/**/*.ts'",
    "test": "jest --verbose",
    "lint": "eslint 'packages/**/*.ts'",
    "lint:fix": "eslint --fix 'packages/**/*.ts'"
  },
  "bin": {
    "create-ts-lib": "bin/index.js"
  },
  "engines": {
    "node": ">=16.13.1"
  },
  "keywords": [
    "typescript",
    "cli",
    "typescript library"
  ],
  "author": {
    "name": "Rabi Wang",
    "url": "https://github.com/Rabi-Wang"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Rabi-Wang/create-ts-lib"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.ts": "pnpm run lint"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/eslint-parser": "^7.19.1",
    "@types/commander": "^2.12.2",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "copyfiles": "^2.4.1",
    "eslint": "^8.27.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.5.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "fs-extra": "^10.1.0"
  }
}
