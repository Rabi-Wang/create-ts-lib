{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "lib",
    "target": "ES6",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "experimentalDecorators": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "files": ["package.json"],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
