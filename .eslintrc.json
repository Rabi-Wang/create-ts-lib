{
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true,
    "es6": true
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "extends": [
    "eslint-config-standard",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "semi": [2, "always"]
  }
}
